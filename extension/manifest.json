{
  "name": "Scales",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Injecting News",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Scales"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
	"contextMenus",
    "tabs"
  ]
}